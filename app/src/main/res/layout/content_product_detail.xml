<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:id="@+id/swipe_product_detail"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.llegoati.llegoati.activities.ProductDetailActivity"
    tools:showIn="@layout/activity_product_detail">

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_detail_layout"
            android:visibility="gone"
            android:orientation="vertical">

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/product_image_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="160dp"
                    android:layout_height="250dp"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:clickable="true"
                    android:padding="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/main_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter" />
                </android.support.v7.widget.CardView>

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0sp"
                    android:layout_marginStart="0sp"
                    android:scrollbarSize="1dp">

                    <LinearLayout
                        android:id="@+id/product_images"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:orientation="vertical"
                        android:scrollbars="vertical"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior">

                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/image1_content_click"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="35sp"
                            android:layout_margin="2dp"
                            android:clickable="true">

                            <android.support.v7.widget.AppCompatImageView xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/image1_product"
                                android:layout_width="wrap_content"
                                android:layout_height="35sp"
                                android:layout_gravity="center|center_vertical|center_horizontal"
                                android:adjustViewBounds="true"
                                android:cropToPadding="true"
                                android:scaleType="fitCenter" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/image2_content_click"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="35sp"
                            android:layout_margin="2dp"
                            android:clickable="true">

                            <android.support.v7.widget.AppCompatImageView xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/image2_product"
                                android:layout_width="wrap_content"
                                android:layout_height="35sp"
                                android:layout_gravity="center|center_vertical|center_horizontal"
                                android:adjustViewBounds="true"

                                android:scaleType="fitCenter" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/image3_content_click"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="35sp"
                            android:layout_margin="2dp"
                            android:clickable="true">

                            <android.support.v7.widget.AppCompatImageView xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/image3_product"
                                android:layout_width="wrap_content"
                                android:layout_height="35sp"
                                android:layout_gravity="center|center_vertical|center_horizontal"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/image4_content_click"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="35sp"
                            android:layout_margin="2dp"
                            android:clickable="true">

                            <android.support.v7.widget.AppCompatImageView xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/image4_product"
                                android:layout_width="wrap_content"
                                android:layout_height="35sp"
                                android:layout_gravity="center|center_vertical|center_horizontal"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter" />
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/image5_content_click"
                            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                            android:layout_width="wrap_content"
                            android:layout_height="35sp"
                            android:layout_margin="2dp"
                            android:clickable="true">

                            <android.support.v7.widget.AppCompatImageView xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/image5_product"
                                android:layout_width="wrap_content"
                                android:layout_height="35sp"
                                android:layout_gravity="center|center_vertical|center_horizontal"
                                android:adjustViewBounds="true"
                                android:scaleType="fitCenter" />
                        </android.support.v7.widget.CardView>
                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>

            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#555555" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/name_subcategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Chancleta"

                    android:textSize="18sp" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/sku_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginLeft="10dp"
                    android:text="005565"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/sku_caption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@+id/sku_value"
                    android:text="SKU:"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:background="#555555" />


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="15.00CUC"
                android:textColor="#000000"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#555555" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Ranking"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatRatingBar
                    android:id="@+id/rating_product"
                    style="@style/Base.Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="5dp"
                    android:maxHeight="24dp"
                    android:numStars="5"
                    android:theme="@style/RatingBar" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:background="#000000"
                android:padding="5dp"
                android:text="Características"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/product_features"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18sp" />


            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:id="@+id/lineComments"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#555555"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/comment_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <include
                android:layout_gravity="bottom"
                android:layout_marginTop="8dp"
                layout="@layout/layout_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.v7.widget.LinearLayoutCompat>


    </android.support.v4.widget.NestedScrollView>

</android.support.v4.widget.SwipeRefreshLayout>
