<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:padding="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            card_view:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:text="Fecha:"
                android:textAppearance="@style/MyCustomTextApparence"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/tv_date"
                android:layout_toRightOf="@id/tv_date"
                android:text="Valor" />

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_toEndOf="@id/tv_date_value"
                android:layout_toRightOf="@id/tv_date_value"
                android:text="ID:"
                android:textAppearance="@style/MyCustomTextApparence"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/tv_id"
                android:layout_toRightOf="@id/tv_id"
                android:text="Valor" />

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Costo total:"
                android:textAppearance="@style/MyCustomTextApparence"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_below="@id/tv_id"
                android:layout_alignStart="@+id/tv_id" />

            <TextView
                android:id="@+id/tv_cost_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_cost"
                android:layout_alignStart="@id/tv_cost"
                android:text="Valor" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@id/tv_date"
                android:text="Estado:"
                android:textAppearance="@style/MyCustomTextApparence"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_status"
                android:text="Valor" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_comment_notification"
            style="@style/NotificationItem"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center|end"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:src="@drawable/ic_insert_comment" />
    </FrameLayout>


</android.support.v7.widget.CardView>
