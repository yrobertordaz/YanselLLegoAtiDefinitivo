<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardView.Light.MyCardView.CardViewWithoutElevation">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_owner_name_value"
                android:layout_marginLeft="@dimen/component_separator"
                android:layout_marginTop="@dimen/component_separator"
                android:layout_toEndOf="@+id/iv_photo"
                android:text="SKU:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_owner_name_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/component_separator"
                android:layout_toEndOf="@+id/iv_photo"
                android:text="Nombre"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sku_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_owner_name_value"
                android:layout_marginLeft="@dimen/component_separator"
                android:layout_marginTop="@dimen/component_separator"
                android:layout_toEndOf="@+id/tv_sku"
                android:text="Valor" />

            <TextView
                android:id="@+id/tv_count_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_sku_value"
                android:layout_alignParentEnd="true"
                android:layout_margin="@dimen/component_separator"
                android:text="0" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_count_value"
                android:layout_toStartOf="@+id/tv_count_value"
                android:text="Cantidad:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv_sku"
                android:layout_below="@+id/tv_sku"
                android:layout_marginTop="@dimen/component_separator"
                android:text="Costo:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_cost_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_cost"
                android:layout_toEndOf="@+id/tv_cost"
                android:layout_marginLeft="@dimen/component_separator"
                android:text="0.00 cuc" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_comment_notification"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="bottom|end"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:src="@drawable/ic_insert_comment" />
    </FrameLayout>

</android.support.v7.widget.CardView>