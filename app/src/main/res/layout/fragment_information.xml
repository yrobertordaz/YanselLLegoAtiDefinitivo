<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/srl_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.llegoati.llegoati.fragments.InformationActivityFragment"
    tools:showIn="@layout/activity_information">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_information_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/origin_8dp"
            android:text="@string/tv_information_title"
            android:textColor="@color/black"
            android:textSize="@dimen/origin_20dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_index_action"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/origin_8dp"
            android:padding="@dimen/origin_1dp"
            android:src="@drawable/ic_list" />

        <View
            android:id="@+id/v_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_information_title"
            android:background="@color/gray" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_divider"
            android:padding="@dimen/origin_8dp"
            app:layoutManager="LinearLayoutManager"
            tools:listitem="@layout/information_list_item" />

    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>
